@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>后台菜单栏</title>
    <script type="text/javascript" src="~/Content/JS/jquery-1.7.2.min.js"></script>
    <script type="text/javascript">
        document.write("<script src='/Content/JS/menulist.js?time=" + new Date() + "'></sc" + "ript>")
    </script>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }

        html {
            overflow: hidden;
            overflow-y: scroll;
        }

        * html body {
            overflow: visible;
        }

        body {
            font: 12px/22px 'Microsoft Yahei',Verdana,Arial,sans-serif,"Times New Roman";
            word-wrap: break-word;
        }

        body, ul, li, h2, img, div {
            margin: 0;
            padding: 0;
        }

            body div {
                text-align: left;
            }

        li {
            list-style-type: none;
        }

        img {
            border: 0 none;
        }

        a:hover {
            color: #9f0017;
        }

        a:link, a:visited {
            text-decoration: none;
            color: #000;
        }

        a {
            outline: none;
            color: #000;
        }

        h2 {
            font-size: 20px;
        }
            .arrow {
            position:absolute;
            right:15px;           
            }
        .clear {
            clear: both;
        }

        .left {
            float: left;
        }

        .right {
            float: right;
        }

        /*左侧菜单*/
        #menu {      
            width: 230px;
            -ms-word-wrap: break-word;
            word-wrap: break-word;
            overflow: hidden;
        }
          
            #menu ul li {
                padding:1px;
                height: 30px;
                width:222px;
                overflow: hidden;
            }

                #menu ul li.hot {
                    height: auto;
                }

                #menu ul li h2 {
                    background: url(/Content/Images/Admin/top_bg.jpg) repeat-x;
                    height: 32px;
                    color: white;
                    line-height:29px;
                    font-size: 14px;
                    font-weight: normal;                    
                    cursor: pointer;
                    text-align:center;
                    position:relative;
                    border:1px solid #404040;
                }

                #menu ul li a {
                    display: block;
                    background-color: #fcf7f7;                  
                    margin-bottom:1px;
                    line-height: 25px;
                    padding:2px 8px 2px 8px;
                    
                    border:1px solid #756c6c;
                }

                    #menu ul li a:hover, #menu ul li a.hot {                     
                        color: #e17a00;
                    }
    </style>
</head>
<body style="background: #e6e7e9;">
    <div id="menu">      
        <ul id="menuUl">
            <li>正在加载...</li>
        </ul>      
    </div>
    <script type="text/javascript">
        $(function () {
            var menuLiList = "";
            if (menuList != undefined && menuList != null && menuList.length > 0) {
                for (var i = 0; i < menuList.length; i++) {
                    if (i == 0) {
                        menuLiList += "<li class='hot'><h2>" + menuList[i].title + "<span class=\"arrow\">∨</span></h2>";
                    }
                    else {
                        menuLiList += "<li><h2>" + menuList[i].title + "<span class=\"arrow\">></span></h2>";
                    }
                    for (var j = 0; j < menuList[i].subMenuList.length; j++) {
                        menuLiList += "<a href='" + menuList[i].subMenuList[j].url + "' target='frameRight'>" + menuList[i].subMenuList[j].title + "</a>";
                    }
                    menuLiList += "</li>";
                }
            }
            if (menuLiList != "") {
                document.getElementById("menuUl").innerHTML = menuLiList;
            }

            $("#menu h2").click(function () {
                if ($(this).parent("li").hasClass("hot")) {
                    $(this).removeClass("hot").parent("li").removeClass("hot");
                    $(this).children("span").text(">");
                } else {
                    $("#menu h2").removeClass("hot");
                    $(this).addClass("hot").parent("li").addClass("hot");
                    $(this).children("span").text("∨");
                }
            })


            $("#menu ul li a").click(function () {
                $("#menu h2").removeClass("hot");
                $("#menu a").removeClass("hot");
                $(this).addClass("hot").parent("li").children("h2").addClass("hot")

            })
        })

    </script>
</body>
</html>
